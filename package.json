{
  "name": "infinitepip-electron",
  "private": true,
  "version": "25.12.24",
  "description": "InfinitePIP for Electron (default app)",
  "main": "src/main/main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "devDependencies": {
    "electron": "^32.2.0",
    "electron-builder": "^25.1.8"
  },
  "build": {
    "appId": "io.pyrosoft.infinitepip",
    "productName": "InfinitePIP",
    "icon": "src/renderer/icon.svg",
    "files": [
      "src/**",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "icon": "src/renderer/icon.svg",
      "target": [
        "nsis"
      ]
    }
  }
}


